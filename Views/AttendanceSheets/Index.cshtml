@model IEnumerable<MatchDayAnalyzerFinal.Models.ClassModels.AttendanceSheet>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Attend)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceToPayPerPlayer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatchGoal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Attend)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceToPayPerPlayer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchGoal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.OpponentTeam)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
