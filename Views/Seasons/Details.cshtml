@model MatchDayAnalyzerFinal.Models.ClassModels.Season

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Season</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div class="col">
    <h3>Teams in Season</h3>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Team Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.TeamsInSeason != null)
            {
                @foreach (var team in Model.TeamsInSeason)
                {
                    @if (team != null)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => team.Id)</td>
                            <td>@Html.DisplayFor(modelItem => team.Name)</td>
                        </tr>
                    }
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No teams in the season.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
